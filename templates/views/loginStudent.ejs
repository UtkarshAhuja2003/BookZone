<body class="login">
    <main>
       <img src="https://i.ibb.co/txHV3T8/login.jpg" id="head"  alt="login">
        <h1 style="margin-left: 21%;">Login as Student</h1>
        <form class="" action="/loginStudent" method="POST">
        <section>
            <div>
                <label for="">Enrollment Number</label>
                <input type="number" placeholder="10-digit" name="studentEnrollment" class="form-control">
                <i class="fa-solid fa-envelope registerrr fa-2x" style="transform: translateY(-4px);"></i>
            </div>
            <div>
                <label for="Password">Password</label>
                <input type="password" placeholder="Password" class="form-control" name="studentpassword">
                <i class="fa fa-lock registerrr fa-2x" aria-hidden="true" style="transform: translateY(-4px);"></i>
            </div>
            <div>
                <input type="submit" value="Sign in">
            </div>
            <a href="registerStudent" style="text-align: center;margin-left: 37%;">Create new account?</a>
        </section>
        </form>
    </main>


