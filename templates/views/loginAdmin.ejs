<body class="login">
    <img src="/public/uploads/unknown (5).png" style="position: absolute; border-radius: 0; height: 60rem; width: auto; opacity: 0.5;">
    <img src="/public/uploads/unknown (3).png" style="position: absolute; float: right; margin-left: 82%; width: 18%; margin-top: 10rem;">
    <main>
        <img src="https://i.ibb.co/txHV3T8/login.jpg" alt="login">
        <h1>Login as admin</h1>
        <form action="/loginAdmin" method="POST">
        <section>
            <div>
                <label for="">School code</label>
            </div>
            <input type="number" name="adminschoolid" placeholder="10-digit">
            <div>
                <label for="">Your email</label>
            </div>
            <input type="email" name="adminemail" placeholder="email@shool_name.com" style="width: 95%;">
            <i class="fa-solid fa-envelope fa-2x"></i>
            <div>
                <label for="Password">Password</label>
            </div>
            <input type="password" name="adminpassword" placeholder="Password">
            <i class="fa fa-lock fa-2x" aria-hidden="true"></i>
            <div>
                <input type="submit" value="Sign in ">
            </div>
            <a href="registerAdmin">Create new account?</a>
        </section>
        </form>
    </main>

